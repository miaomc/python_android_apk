<Accordion>
    orientation: 'vertical'
    AccordionItem
        title: 'COMMANDS'
        BoxLayout
            orientation: 'vertical'
            Button:
                text: 'Qia bubu~'
                color: .8,.9,0,1
                on_press: root.callback(self.text)
            Button:
                text: 'Qia hao le.'
                color: .8,.9,0,1 
                on_press: root.callback(self.text)

            Button:
                id: btn_tn
                text: 'Tu Nai Le * *'
                color: .8,.9,0,1 
                on_press: root.callback(self.text)

    AccordionItem
        title: 'RECORDING'
        BoxLayout
            orientation: 'vertical'
            ListView:
                size_hint: (1, 0.9)
                id: my_list
                item_strings: ['\nStart from here.\n']
            Button:
                text: 'Refresh Data'
                size_hint: (1, 0.1)
                on_press: root.callback_refresh()
